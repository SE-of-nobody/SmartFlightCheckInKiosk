package service;

import util.PlaneUtil;
import util.VarUtil;

import java.util.List;
import java.util.Scanner;

public class Test {

    public static void main(String[] args) {

        Scanner scanner = new Scanner();
        List<Order> orders = PlaneUtil.getOrdersFromCsv(VarUtil.DATAPATH, VarUtil.CHARSET);
        //设置餐品
        PlaneUtil.setMeal(orders.get(0), scanner);
        //设置座位
        PlaneUtil.setSeat(orders.get(0), scanner);
        //写入到文件
        PlaneUtil.setOrdersToCsv(orders, VarUtil.SAVEPATH, VarUtil.CHARSET);
        //改价格
        PlaneUtil.setSeatPrice(orders.get(0));

        //登录的三种方式
        OrderInfo orderInfo = new OrderInfo();
        //文件登录
        orderInfo.checkWithFile();

        //账号密码
        orderInfo.checkUsernameAndID("xxx", "id");

        //飞机号
        orderInfo.checkBookingNumber("bookingNum");

        //就是给，orders里面的一个改，get到的就是要就修改的行
    }
}
